doctype html
html(ng-app='shapesite')
    head
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
        meta(charset="UTF-8")
        title Hi there everybody
        link(rel='stylesheet', href='css/styles.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    body
        #wrapper
            .window-frame(ng-controller='FocusbtnsController as $ctrl')
                nav.top-nav
                    .logo(ng-class='{intro: $ctrl.permanentIntros}')
                        .ribbon-bg
                        img(src='imgs/shape-logo.png')
                    .nav-links(ng-class='{intro: $ctrl.permanentIntros}')
                        a(href='#') threats
                        a(href='#') platform
                        a(href='#') customers
                        a(href='#') research
                        a(href='#') about
                        a(href='#') contact
                .intro-text-container
                    h4(ng-class='{intro: $ctrl.leftTextIntro}').level-1
                        span the worlds first
                    h1(ng-class='{intro: $ctrl.leftTextIntro}').level-2
                        span collective
                        .ribbon-bg
                    h1(ng-class='{intro: $ctrl.leftTextIntro}').level-3
                        span defense
                        .ribbon-bg
                    h6(ng-class='{intro: $ctrl.leftTextIntro}').level-4
                        span powered by AI and deep learning technology
                        .ribbon-bg
                .window.container
                    .center-btns
                        .big-diamond-container(
                            ng-class='{intro: $ctrl.leftTextIntro}'
                            ng-click='$ctrl.mainHompageOutro()'
                        )
                            .big-diamond-btn(ng-class='{intro: $ctrl.leftTextIntro}')
                                p(ng-class='{intro: $ctrl.leftTextIntro}').btn-text explore
                        .focus-btn-container(style='left:50%;top:5%;')
                            .diamond
                                .diamond-btn(ng-class='{intro: $ctrl.focusBtnIntros}')
                            .btn-text.right
                                p(ng-class='{intro: $ctrl.focusBtnIntros}') banking
                                .anime-line-container
                                    .anime-lines(ng-class='{intro: $ctrl.focusBtnIntros}')
                                    .anime-lines(ng-class='{intro: $ctrl.focusBtnIntros}')
                                    .anime-lines(ng-class='{intro: $ctrl.focusBtnIntros}')
                        .focus-btn-container(style='left:63%;top:20%;')
                            .diamond
                                .diamond-btn(ng-class='{intro: $ctrl.focusBtnIntros}')
                            .btn-text.right
                                p(ng-class='{intro: $ctrl.focusBtnIntros}') government
                                .anime-line-container
                                    .anime-lines(ng-class='{intro: $ctrl.focusBtnIntros}')
                                    .anime-lines(ng-class='{intro: $ctrl.focusBtnIntros}')
                                    .anime-lines(ng-class='{intro: $ctrl.focusBtnIntros}')
                        .focus-btn-container(style='left:65%;top:35%;')
                            .diamond
                                .diamond-btn(ng-class='{intro: $ctrl.focusBtnIntros}')
                            .btn-text.right
                                p(ng-class='{intro: $ctrl.focusBtnIntros}') retail
                                .anime-line-container
                                    .anime-lines(ng-class='{intro: $ctrl.focusBtnIntros}')
                                    .anime-lines(ng-class='{intro: $ctrl.focusBtnIntros}')
                                    .anime-lines(ng-class='{intro: $ctrl.focusBtnIntros}')
                        .focus-btn-container(style='left:63%;top:55%;')
                            .diamond
                                .diamond-btn(ng-class='{intro: $ctrl.focusBtnIntros}')
                            .btn-text.right
                                p(ng-class='{intro: $ctrl.focusBtnIntros}') darknet
                                .anime-line-container
                                    .anime-lines(ng-class='{intro: $ctrl.focusBtnIntros}')
                                    .anime-lines(ng-class='{intro: $ctrl.focusBtnIntros}')
                                    .anime-lines(ng-class='{intro: $ctrl.focusBtnIntros}')
                        .focus-btn-container(style='left:28%;top:18%;')
                            .diamond
                                .diamond-btn(ng-class='{intro: $ctrl.focusBtnIntros}')
