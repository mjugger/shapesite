                .social-media(ng-class='{intro: $ctrl.permanentIntros}')
                    i.fa.fa-facebook-official(aria-hidden='true')
                    i.fa.fa-twitter(aria-hidden='true')
                    i.fa.fa-comment-o(aria-hidden='true')
                    p
                        span chat
                        |now with one of our experts
            ng-view
            block content
    script(src='https://cdnjs.cloudflare.com/ajax/libs/three.js/87/three.min.js')
    script(src='js/bundle.js')