.diamond
    width: 50px
    height: 50px
    transform: rotate(45deg)
    position: absolute
    display: flex
    align-items: center
    justify-content: center

.diamond-btn
    width: 0px
    height: 0px
    position: absolute
    background-color: #aaaaaa
    display: flex
    align-items: center
    justify-content: center
    animation-fill-mode: forwards
    animation-duration: 0.8s
    padding: 0px
    transition: width 0.2s, height 0.2s
    
    &.intro
        width: 20px
        height: 20px
        &:after
            width: 40px
            height: 40px
        &:before
            width: 50px
            height: 50px

    &:hover
        animation-name: example

    &:after
        width: 0px
        height: 0px
        background-color: #dddddd
        position: absolute
        content: ''
        z-index: -1
        animation-fill-mode: forwards
        animation-duration: 0.5s
        transition: width 0.2s, height 0.2s
        transition-delay: 0.1s

    &:hover:after
        animation-name: example2

    &:before
        width: 0px
        height: 0px
        background-color: #eeeeee
        position: absolute
        content: ''
        z-index: -1
        transition: background-color 0.5s
        transition: width 0.2s, height 0.2s
        transition-delay: 0.2s

    &:hover:before
        background-color: #fa3000


@keyframes example
    50%
        width: 0px
        height: 0px
    100% 
        width: 20px
        height: 20px
        background-color: #ffffff

@keyframes example2
    50% 
        width: 0px
        height: 0px
    100% 
        width: 40px
        height: 40px
        background-color: #ff5000
        
