.window-frame
    position: relative

.window
    box-shadow: 0 0 0 99999px rgba(0, 0, 0, .5)
    height: 700px
    margin: 20px 0
    display: flex
    align-items: center
    justify-content: center

    .center-btns
        width: 60%
        height: 80%
        position: relative

.intro-text-container
    position: absolute
    top: 220px
    left: 0
    h1
    h2
    h3
    h4
    h5
    h6
    p
        color: #ffffff
        transition: transform 0.3s, opacity 0.1s
        position: relative
        transform: translateX(-200%)
        opacity: 0
        float: left
        clear: both
        padding: 5px
        span
            z-index: 1
            position: relative
    h4
        background-color: #000000
    h1
        font-size: 70px
    .level-1
        transition-delay: 0.1s
    .level-2
        transition-delay: 0.2s
    .level-3
        transition-delay: 0.3s
    .level-4
        transition-delay: 0.4s
    .intro
        opacity: 1
        transform: translateX(0)

.focus-btn-container
    width: 50px
    height: 50px
    position: absolute

    .btn-text.left
        right: 59px
        top: 4px
        text-align: left
        p
            float: right
        .anime-lines
            float: left
            margin-right: 15px

    .btn-text.right
        left: 59px
        top: 4px
        text-align: right
        p
            float: left
        .anime-lines
            float: right
            margin-left: 15px

    .btn-text
        position: absolute
        width: 250px
        color: white
        .anime-lines
            width: 0px
            height: 3px
            background-color: #444444
            transition: width 0.3s
            &:nth-child(3)
                width: 0px
            &.intro
                width: 20px
                &:nth-child(3)
                    width: 50px
        p
            text-transform: uppercase
            border-bottom: 1px solid #444444
            width: 0%
            overflow: hidden
            transition: width 0.5s
            &.intro
                width: 100%

.big-diamond-container
    width: 150px
    height: 150px
    transform: rotate(45deg)
    position: absolute
    display: flex
    align-items: center
    justify-content: center
    right: 80px;
    top: 215px;
    z-index: -100
    cursor: pointer
    
    &.intro
        z-index: 100
    
    .big-diamond-btn
        width: 0px
        height: 0px
        position: absolute
        background-color: #aaaaaa
        display: flex
        align-items: center
        justify-content: center
        animation-fill-mode: forwards
        animation-duration: 0.3s
        padding: 0px
        transition: width 0.2s, height 0.2s
        
        &.intro
            width: 80px
            height: 80px
        
    &:hover > .big-diamond-btn
        animation-name: bigBtnAnime

    .btn-text
        color: #ffffff
        font-size: 20px
        transition: transform 0.5s, opacity 0.5s
        transform: rotate(-45deg) translateX(-100px)
        opacity: 0
        &.intro
            transform: rotate(-45deg) translateX(0px)
            opacity: 1
        
    &:before
        width: 0px
        height: 0px
        background-color: #dddddd
        position: absolute
        content: ''
        z-index: -1
        animation-fill-mode: forwards
        animation-duration: 0.2s
        transition: width 0.2s, height 0.2s
        transition-delay: 0.1s
        opacity: 0.5
        border: 0px solid rgba(255, 255, 255, 0.5)
        
    &.intro:before
        width: 130px
        height: 130px
        border-width: 10px
    

    &:hover:before
        animation-name: bigBtnBeforeAnime
        
