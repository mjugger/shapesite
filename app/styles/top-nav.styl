.top-nav
    width: 1170px
    color: #ffffff
    text-transform: uppercase
    *zoom: 1

    &:before,&:after
        content: " "
        display: table

    &:after
        clear: both

    .nav-links
        display: inline-block
        float: right
        a
            margin-left: 20px
            font-size: 12px
            text-decoration: none
            color: #ffffff
            transition: transform 0.5s, opacity 0.5s
            opacity: 0
            display: inline-block
            transform: translateX(100px)
        &.intro
            a
                opacity: 1
                transform: translateX(0px)

    .logo
        display: inline-block
        float: left
        position: relative
        img
            width: 100px
            z-index: 1
            opacity: 0
            position: relative
            display: inline-block
            transform: translateX(-100px)
            transition: transform 0.5s, opacity 0.5s
        &.intro
            img
                opacity: 1
                transform: translateX(0px)